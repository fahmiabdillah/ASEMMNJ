<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailAsetOfflineActivity"
    android:padding="18dp"
    android:background="@color/background_grey"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="false"
            >

            <TextView
                android:id="@+id/tvKetReject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KET. REJECT :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"
                android:visibility="gone"

                />


            <EditText
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/inpKetReject"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:inputType="textCapSentences|textMultiLine"
                android:text="keterangan"
                android:gravity="top"
                android:paddingTop="10dp"
                android:background="@drawable/tgl_spinner"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPE ASSET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/main_grey"
                />



            <Spinner
                android:id="@+id/inpTipeAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JENIS ASSET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"


                />



            <Spinner

                android:id="@+id/inpJenisAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KONDISI ASET:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"


                />


            <Spinner

                android:id="@+id/inpKndsAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TANGGAL INPUT :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"
                />


            <EditText

                android:id="@+id/inpTglInput"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KODE ASET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"


                />

            <Spinner

                android:id="@+id/inpKodeAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="UNIT :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"


                />

            <Spinner

                android:id="@+id/inpUnit"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="SUB UNIT :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"


                />

            <Spinner

                android:id="@+id/inpSubUnit"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="AFDELING :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tvAfdeling"

                />

            <Spinner

                android:id="@+id/inpAfdeling"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_not_clickable_spinner"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA ASET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"
                />


            <EditText

                android:id="@+id/inpNamaAset"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="NOMOR ASET SAP :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/inpNmrSAP"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner"
                android:inputType="numberDecimal" />
            <TextView
                android:id="@+id/tvBa"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="UPLOUD BA :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight=".70"
                    android:background="@drawable/tgl_spinner"
                    android:text="Tidak Ada File"
                    android:id="@+id/tvUploudBA"
                    android:gravity="center_vertical"
                    android:textColor="@color/main_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <Button

                    android:id="@+id/inpUploudBA"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight="0.3"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_spiner"
                    android:spinnerMode="dropdown"
                    android:text="UPLOAD"
                    android:onClick="uploadImage"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:layout_toEndOf="@+id/tvUploudBA"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="FOTO ASET :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:id="@+id/tvFoto"
                android:textStyle="bold"


                />
            <HorizontalScrollView
                android:id="@+id/scrollPartition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/lytPartition"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:background="@drawable/tgl_spinner"
                        android:layout_marginRight="7dp"
                        android:id="@+id/foto1"
                        >

                        <ImageView
                            android:id="@+id/fotoimg1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_outline_image_24"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/foto2"
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/tgl_spinner"

                        >

                        <ImageView
                            android:id="@+id/fotoimg2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_outline_image_24"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/foto3"
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:background="@drawable/tgl_spinner"
                        android:layout_marginRight="7dp"
                        >

                        <ImageView
                            android:id="@+id/fotoimg3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_outline_image_24"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/foto4"
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/tgl_spinner">

                        <ImageView
                            android:id="@+id/fotoimg4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_outline_image_24" />
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/inpBtnMap"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map"
                android:background="@drawable/button_background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/listMapButton"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/map1"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.2"
                    />

                <Button
                    android:id="@+id/map2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/button_background"
                    android:text="Map" />

                <Button
                    android:id="@+id/map3"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.2"
                    android:layout_marginStart="5dp"
                    />

                <Button
                    android:id="@+id/map4"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.2"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="HGU :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tvHGU"
                />


            <EditText

                android:id="@+id/inpHGU"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner"
                android:spinnerMode="dropdown"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="PERSEN KONDISI :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tvPersenKondisi"
                />


            <EditText

                android:id="@+id/inpPersenKondisi"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner"
                android:inputType="numberDecimal"
                android:spinnerMode="dropdown"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="LUAS AREAL (Ha) :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/luasTanaman"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="KAPASITAS/LUAS BANGUNAN :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/luasNonTanaman"
                />


            <EditText

                android:id="@+id/inpLuasAset"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner"
                android:inputType="numberDecimal"
                android:spinnerMode="dropdown"

                />









            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NILAI PEROLEHAN :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:id="@+id/inpNilaiAsetSAP"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/tgl_spinner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TANGGAL PEROLEHAN:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpTglMasukAset"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background= "@drawable/tgl_spinner"
                android:hint="tanggal perolehan"
                android:layout_height="41dp"
                android:paddingVertical="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MASA PENYUSUTAN :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpMasaPenyusutan"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/tgl_spinner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMOR BAST :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tvBast"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpNmrBAST"
                android:layout_marginBottom="10dp"
                android:layout_height="50dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/tgl_spinner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NILAI RESIDU :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpNmrResidu"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/tgl_spinner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UMUR EKONOMIS :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpUmrEkonomis"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/tgl_spinner"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUMLAH POHON :"
                android:textSize="14sp"
                android:id="@+id/tvPohon"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpJmlhPohon"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:hint="jumlah pohon"
                android:inputType="numberDecimal"
                android:background="@drawable/tgl_spinner"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KETERANGAN :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:id="@+id/inpKeterangan"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:inputType="textCapSentences|textMultiLine"
                android:text="-"
                android:gravity="top"
                android:paddingTop="10dp"
                android:background="@drawable/tgl_spinner"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/qrGroup"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FOTO QR :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_grey"
                    android:layout_marginVertical="10dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center|end"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:layout_width="123dp"
                        android:layout_height="40dp"
                        android:text="DOWNLOAD"
                        android:textSize="10sp"
                        android:id="@+id/downloadQr"

                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="346dp"
                    android:id="@+id/qrDefault"
                    android:src="@drawable/qr_default"
                    android:padding="20dp"
                    android:background="@drawable/tgl_spinner"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMOR INVENTORY :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/main_grey"
                    android:layout_marginVertical="10dp"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/inpNoInv"
                    android:layout_marginBottom="10dp"
                    android:layout_height="41dp"
                    android:paddingVertical="10dp"
                    android:lines="1"
                    android:background="@drawable/tgl_spinner"
                    />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOTO ASET + QR CODE :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"
                android:id="@+id/tvFotoAsetQR"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:id="@+id/addNewFotoAsetAndQr"
                android:orientation="horizontal"
                android:background="@drawable/tgl_spinner"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                >

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_outline_image_24"
                    android:id="@+id/fotoasetqr"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/approveGroup"

                >

                <Button
                    android:id="@+id/btnApprove"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_background"
                    />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnReject"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/uploadFotoGroup"
                >




                <Button
                    android:visibility="gone"
                    android:id="@+id/inpSimpanFotoQr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:text="SIMPAN DATA"
                    android:backgroundTint="@color/main_grey"
                    android:textColor="@color/white"
                    />

