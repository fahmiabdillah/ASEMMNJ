<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="18dp"
    android:background="@color/background_grey"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPE ASSET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/main_grey"
                />



            <Spinner
                android:id="@+id/inpTipeAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/rounded_spinner"
                android:spinnerMode="dropdown"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JENIS ASSET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"


                />


            <Spinner

                android:id="@+id/inpJenisAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/rounded_spinner"
                android:spinnerMode="dropdown" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KONDISI ASET:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"


                />


            <Spinner

                android:id="@+id/inpKndsAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/rounded_spinner"
                android:spinnerMode="dropdown"

                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TANGGAL INPUT :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"
                />


            <EditText

                android:id="@+id/inpTglInput"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tgl_spinner"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KODE ASET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"


                />

            <Spinner

                android:id="@+id/inpKodeAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/rounded_spinner"
                android:spinnerMode="dropdown" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA ASET :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginBottom="10dp"
                />


            <EditText

                android:id="@+id/inpNamaAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/edit_text_spiner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="NOMOR ASET SAP :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/inpNmrSAP"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_spiner"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="UPLOUD BA :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight=".70"
                    android:background="@drawable/edit_text_spiner"
                    android:text="Tidak Ada File"
                    android:id="@+id/tvUploudBA"
                    android:gravity="center_vertical"
                    android:textColor="@color/main_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <Button

                    android:id="@+id/inpUploudBA"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight="0.3"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_spiner"
                    android:spinnerMode="dropdown"
                    android:text="UPLOUD"
                    android:onClick="uploadImage"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:layout_toEndOf="@+id/tvUploudBA"
                    />
            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="FOTO ASET :"
                android:textColor="@color/main_grey"
                android:textSize="14sp"
                android:textStyle="bold"


                />

            <HorizontalScrollView
                android:id="@+id/scrollPartition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/lytPartition"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:background="@drawable/edit_text_spiner"
                        android:layout_marginRight="7dp"
                        android:id="@+id/foto1"
                        >

                        <ImageView
                            android:id="@+id/fotoimg1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_outline_image_24"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/foto2"
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/edit_text_spiner"

                        >

                        <ImageView
                            android:id="@+id/fotoimg2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_outline_image_24"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/foto3"
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:background="@drawable/edit_text_spiner"
                        android:layout_marginRight="7dp"
                        >

                        <ImageView
                            android:id="@+id/fotoimg3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_outline_image_24"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/foto4"
                        android:layout_width="91dp"
                        android:layout_height="99dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/edit_text_spiner">

                        <ImageView
                            android:id="@+id/fotoimg4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_outline_image_24" />
                    </RelativeLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/inpBtnMap"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map"
                android:background="@drawable/button_background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/listMapButton"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/map1"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.3"
                    />

                <Button
                    android:id="@+id/map2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_background"
                    android:text="Map" />

                <Button
                    android:id="@+id/map3"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.3"
                    android:layout_marginStart="5dp"
                    />

                <Button
                    android:id="@+id/map4"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:background="@drawable/button_background"
                    android:layout_weight="0.3"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LUAS AREAL/KAPASITAS \n /LUAS BANGUNAN  :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText

                android:id="@+id/inpLuasAset"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/edit_text_spiner"
                android:spinnerMode="dropdown"
                android:inputType="numberDecimal"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NILAI ASET SAP"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:id="@+id/inpNilaiAsetSAP"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_spiner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TANGGAL PEROLEHAN:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpTglMasukAset"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background= "@drawable/pickdate_background"
                android:hint="tanggal perolehan"
                android:layout_height="41dp"
                android:paddingVertical="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MASA PENYUSUTAN :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpMasaPenyusutan"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/tahun_background"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMOR BAST :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpNmrBAST"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_spiner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NILAI RESIDU :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpNmrResidu"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_spiner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UMUR EKONOMIS :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpUmrEkonomis"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_spiner"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUMLAH POHON :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/inpJmlhPohon"
                android:layout_marginBottom="10dp"
                android:layout_height="41dp"
                android:paddingVertical="10dp"
                android:lines="1"
                android:hint="jumlah pohon"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_spiner"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KETERANGAN :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/main_grey"
                android:layout_marginVertical="10dp"

                />


            <EditText
                android:id="@+id/inpKeterangan"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:inputType="textCapSentences|textMultiLine"
                android:text="keterangan"
                android:gravity="top"
                android:paddingTop="10dp"
                android:background="@drawable/edit_text_spiner"
                />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN DATA"
                android:background="@drawable/button_background"
                />



        </LinearLayout>
    </ScrollView>

</LinearLayout>