<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.ASEM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.ASEM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_grey</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/MediumBlue</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/grey</item>
    </style>

    <style name="Theme.ASEM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ASEM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ASEM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>